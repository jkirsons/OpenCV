{
    "name": "OpenCV",
    "description": "OpenCV Library for ESP32",
    "keywords": "opencv",
    "frameworks": "arduino",
    "platforms": "*",
    "repository": {
        "type": "git",
        "url": "https://github.com/opencv/opencv.git"
    },

    "build": {
        "flags": [
            "-Ddefine=1",
            "-Wp,-Os,-ffunction-sections,-fdata-sections,-fno-exceptions,-flto",
            "-Wl,--gc-sections,-flto"
        ]
    },

    "dependencies": [{
        "name": "OpenCL",
        "version": "https://github.com/KhronosGroup/OpenCL-Headers.git"
    }]
}
